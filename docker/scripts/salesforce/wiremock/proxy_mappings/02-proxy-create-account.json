{
  "priority": 1,
  "name": "Proxy Create Account to JSON Server",
  "request": {
    "method": "POST",
    "urlPathPattern": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Account"
  },
  "response": {
    "proxyBaseUrl": "http://salesforce-json-mock",
    "transformers": ["response-template"],
    "headers": {
      "Content-Type": "application/json"
    },
    "transformerParameters": {
      "urlRewrite": {
        "from": "/services/data/v[0-9]+\\.[0-9]+/sobjects/Account",
        "to": "/accounts"
      },
      "bodyTransform": {
        "type": "json",
        "transformResponse": {
          "id": "{{jsonPath response.body '$.id'}}",
          "success": true,
          "errors": []
        }
      }
    }
  }
}
